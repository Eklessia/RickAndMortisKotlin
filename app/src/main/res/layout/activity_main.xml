<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <fragment
            android:id="@+id/regitroUsuario"
            android:name="cl.malditosnakamas.rickandmorty.registrousuario.presentation.RegistroUsuarioFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_registro_usuario" />

        <fragment
            android:id="@+id/regitroUsuario2"
            android:name="cl.malditosnakamas.rickandmorty.registrousuario.presentation.RegistroUsuarioFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regitroUsuario"
            tools:layout="@layout/fragment_registro_usuario" />

        <fragment
            android:id="@+id/regitroUsuario3"
            android:name="cl.malditosnakamas.rickandmorty.registrousuario.presentation.RegistroUsuarioFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regitroUsuario2"
            tools:layout="@layout/fragment_registro_usuario" />

        <Button
            android:id="@+id/brnEntrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regitroUsuario3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>